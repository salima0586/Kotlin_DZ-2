<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_url"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/top"
        android:layout_alignParentEnd="true"
        android:text="@string/submit"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/marginStartBtn"
        android:layout_marginEnd="@dimen/marginEndBtn"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_margin="100dp"
        android:layout_height="180dp"
        android:contentDescription="@string/avatar" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margintop"
        android:layout_marginStart="@dimen/marginStartEt"
        android:layout_marginEnd="@dimen/marginEndEt"
        android:hint="@string/enter_url"
        android:layout_marginBottom="25dp"
        android:minHeight="48dp"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-light"
        android:textStyle="bold"
        android:textSize="@dimen/sizeEt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_submit"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:text="@string/random"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/marginStartBtn"
        android:layout_marginEnd="@dimen/marginEndBtn"
        android:textAllCaps="false" />

</RelativeLayout>